
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script>
  
  $(document).ready(function() {

  	$("#error-exists").hide();
  	$("#error-missing").hide();
  	
  	//on click
  	$("#submit").click(function() {
		$.post("/createAccount", 
		{ firstname: $("#firstname").val(),
		lastname: $("#lastname").val(),
		username: $("#username").val(),
		password: $("#password").val() },
		function(data, status) {
			if (data == "Error: Missing field") {
                $('#error').text('Necessary fields were left blank.');
				$("#error").show();
			} else if (data == "Error: Email exists") {
				$('#error').text('The email you requested is already in use.');
                $("#error").show();
			} else {
				window.location.replace("/enterList");
			}
  		});
  	 });
 });
</script>

<div class="alert alert-danger" role="alert" hidden=true id='error'></div>

    <div id="content" style="width: 1000px; height:600px">
        <div class="input-group">
            <p>First Name: <input type="text" class="form-control" id="firstname"></p>
            <p>Last Name: <input type="text" class="form-control" id="lastname"></p>
            <p>Username: <input type="text" class="form-control" id="username"></p>
            <p>Password: <input type="password" class="form-control" id="password"></p>
        </div>

  	<br><br><button class="btn btn-default" id="submit">Sign Up!</button>
  

  </div>